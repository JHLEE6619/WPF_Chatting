<Page x:Class="Chatting.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chatting"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="450"
      Title="Login">

    <Grid Background="#FFFEF01B">
        <TextBlock HorizontalAlignment="Center" Margin="0,160,0,0"
                   TextWrapping="Wrap" VerticalAlignment="Top" 
                   FontSize="44" FontWeight="Bold" Background="#FF3A1D1D" TextAlignment="Center" Foreground="Yellow"><Run Language="ko-kr" Text="카"/><Run Text="톡"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="94,0,0,0" TextWrapping="Wrap" Text="아이디" VerticalAlignment="Center" FontSize="16"/>
        <TextBox x:Name="TBox_id" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="145" FontSize="16" Margin="180,0,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="94,333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Text="비밀번호"/>
        <TextBox x:Name="TBox_pw" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" FontSize="16" Margin="180,332,0,0"/>
        <Button x:Name="btn_join" Content="회원가입" HorizontalAlignment="Left" Margin="94,379,0,0" VerticalAlignment="Top" FontSize="16" Width="100" Click="Btn_join_click"/>
        <Button x:Name="btn_login" Content="로그인" HorizontalAlignment="Left" Margin="225,379,0,0" VerticalAlignment="Top" FontSize="16" Width="100" Click="btn_login_Click"/>

    </Grid>
</Page>
