<Window x:Class="Chatting.Chat_room"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatting"
        mc:Ignorable="d"
        Title="Chat_room" Height="600" Width="450">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="30,30,0,0" TextWrapping="Wrap"
            Text="대화방" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <ListView x:Name="LV_chat_room_list" Margin="0,140,0,0"  VerticalAlignment="Top" HorizontalAlignment="Center" Width="370" Height="380">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock FontSize="16"/>
                        <TextBlock FontSize="16"/>
                        <TextBlock FontSize="16"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="파일 전송" FontSize="16" HorizontalAlignment="Left" Margin="40,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.923,0.526" Width="100"/>
        <Button Content="초대하기" FontSize="16" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.923,0.526" Width="100"/>
        <Button Content="퇴장" FontSize="16" HorizontalAlignment="Left" Margin="310,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.923,0.526" Width="100"/>
    </Grid>
</Window>
